    set(INI_PLUGIN_CSC_SECTION_SWITCH "true")
else()
    set(INI_PLUGIN_CSC_SECTION_SWITCH "false")
endif()

configure_file(${MMP_PRO_TOP_DIR}/Sample/Sample.ini.in ${MMP_PRO_TOP_DIR}/Sample/Sample.ini)
endmacro()